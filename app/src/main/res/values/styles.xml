<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorSecondary">@color/secondary</item>
        <item name="android:fontFamily">@font/khand_medium</item>
    </style>

    <!-- Welcome screen theme. -->
    <style name="WelcomeScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorSecondary">@color/secondary</item>
        <item name="android:fontFamily">@font/khand_medium</item>
    </style>

    <!-- swim_master_title_text.xml -->
    <style name="swim_master">
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:fontFamily">@font/bungee_inline</item>
    </style>

    <!-- sign up button -->
    <style name="sign_up">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:fontFamily">@font/khand_medium</item>

    </style>

    <!-- Edit Text forms -->
    <style name="edit_text">
        <item name="android:textColor">@drawable/custom_edittext_text</item>
        <item name="android:colorPrimaryDark">@color/secondary</item>
        <item name="android:textColorHint">@color/secondary_transparent</item>
        <item name="android:backgroundTint">@color/accent_dark</item>
    </style>

    <!--Title-->
    <style name="title">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:fontFamily">@font/khand_medium</item>
    </style>

    <!--Description-->
    <style name="description">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_transparent</item>
        <item name="android:fontFamily">@font/khand_medium</item>
    </style>
</resources>
