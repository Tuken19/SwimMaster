<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorSecondary">@color/secondary</item>
        <item name="android:fontFamily">@font/khand_medium</item>
    </style>

    <!-- Welcome screen theme. -->
    <style name="WelcomeScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorSecondary">@color/secondary</item>
        <item name="android:fontFamily">@font/khand_medium</item>
    </style>

    <!-- swim_master_title_text.xml -->
    <style name="swim_master">
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:fontFamily">@font/bungee_inline</item>
    </style>

    <!-- sign up button -->
    <style name="sign_up">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:fontFamily">@font/khand_medium</item>
        <item name="android:elevation">10dp</item>
        <item name="android:shadowColor">@color/shadow</item>
    </style>

</resources>
